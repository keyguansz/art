<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/test_am1"
        android:layout_marginLeft="200dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/drawable_demo"
        android:text="test_am1"
        />
    <ListView
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@drawable/layer_demo"
        android:text="layer_demo"
        />
    <TextView
        android:id="@+id/transition_demo_tv"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/transition_demo"
        android:text="transition_demo"
        />
    <TextView
        android:id="@+id/scale_demo_tv"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/scale_demo"
        android:text="scale_demo_tv"
        />
    <TextView
        android:id="@+id/clip_demo_tv"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/clip_demo"
        android:text="clip_demo"
        />
    <TextView
        android:id="@+id/k_demo_tv"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/clip_demo"
        android:text="k_demo_tv"
        />

</LinearLayout>
